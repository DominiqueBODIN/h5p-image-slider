[
  {
    "label": "Pictures",
    "name": "pictuSlides",
    "type": "list",
    "field": {
      "label": "Picture Slide",
      "name": "pictuSlide",
      "type": "group",
      "fields": [
        {
          "label": "Picture Slide",
          "name": "pictuSlide",
          "type": "library",
          "options": [
            "H5P.PictuSlide 1.0"
          ]
        }
      ]
    }
  },
  {
    "label": "Aspect ratio",
    "name": "aspectRatioMode",
    "type": "select",
    "description": "Automatic means fixed aspect ratio automatically determined based on the images",
    "default": "auto",
    "options": [
      {
        "value": "auto",
        "label": "Automatic"
      },
      {
        "value": "custom",
        "label": "Custom"
      },
      {
        "value": "notFixed",
        "label": "Not fixed"
      }
    ]
  },
  {
    "label": "Aspect Ratio Settings",
    "name": "aspectRatio",
    "type": "group",
    "widget": "showWhen",
    "expanded": true,
    "showWhen": {
      "rules": [
        {
          "field": "aspectRatioMode",
          "equals": "custom"
        }
      ]
    },
    "fields": [
      {
        "label": "Aspect ratio width",
        "name": "aspectWidth",
        "type": "number",
        "default": 4,
        "description": "If you use 4 here, and 3 for the height the aspect ratio will be 4:3"
      },
      {
        "label": "Aspect ratio height",
        "name": "aspectHeight",
        "type": "number",
        "default": 3,
        "description": "If you use 3 here, and 4 for the width the aspect ratio will be 4:3"
      }
    ]
  }
]